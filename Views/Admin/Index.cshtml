@model AdminViewModel



@* // title of the page using bootstrap heading*@
<h1 class="display-4">Admin Dashboard</h1>

<div>
    <div class="d-flex justify-content-between">
        <h3>Songs</h3>
        <a asp-controller="Songs" asp-action="Create" class="btn btn-primary">Add New Song</a>
    </div>

    <div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Performer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.Songs)
                {
                    <tr>
                        <td>@song.Title</td>
                        <td>@song.Genre.Name</td>
                        <td>@song.Performer.Name</td>
                        <td>$@song.Price</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Songs", new { id = song.SongId })">Edit</a>
                            <a class="btn btn-danger btn-sm"  href="@Url.Action("Delete", "Songs", new { id = song.SongId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div>
    <div class="d-flex justify-content-between">
        <h3>Genres</h3>
        <a asp-controller="Genres" asp-action="Create" class="btn btn-success">Add New Genre</a>

    </div>

    <div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model.Genres)
                {
                    <tr>
                        <td>@genre.Name</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Genres", new { id = genre.GenreId })">Edit</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Genres", new { id = genre.GenreId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div>
    <div class="d-flex justify-content-between">
        <h3>Performer</h3>
        <a asp-controller="Performers" asp-action="Create" class="btn btn-secondary">Add New Performer</a>

    </div>

    <div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Biography</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var performer in Model.Performers)
                {
                    <tr>
                        <td>@performer.Name</td>
                        <td>@performer.Description</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Performers", new { id = performer.PerformerId })">Edit</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Performers", new { id = performer.PerformerId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


